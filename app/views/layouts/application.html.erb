<!DOCTYPE html>
<html>
  <head>
    <title>Nomster DC - Best Happy Hours in DC</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

 <body>

<nav class="navbar navbar-toggleable-md navbar-light bg-faded">
      <ul class="nav navbar-nav">
        <li class="nav-item">
          <%= link_to new_place_path, class: 'nav-link ' do %>
            <i class="fa fa-plus-circle"></i>
            New Place
          <% end %>
        </li>
      </ul>

       <%= link_to 'Nomster', root_path, class: 'navbar-brand mx-auto' %>
    
        
        <ul class="nav navbar-nav  justify-content-end">
          <% if user_signed_in? %>

          <li class="nav-item dropdown">
              <span class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              <%= link_to 'My Profile', user_path(current_user) %>
              </span>      
            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
              <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link ' %>
            </div>
          </li>
        </ul>



          <% else %>
          <ul class="nav">
            <li class="nav-item">
              <span class="nav-link"><%= link_to "Sign In", new_user_session_path %></span>
            </li> <br/><br/>
            <li class="nav-item">
              <span class="nav-link"><%= link_to "Sign Up", new_user_registration_path %></span>
            </li>
          </ul>
        <% end %>
        
      
    </nav>



    <% if notice.present? %>
    <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
    <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
